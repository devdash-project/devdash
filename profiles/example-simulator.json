{
    "$schema": "../protocols/profile-schema.json",
    "name": "Simulator Test Profile",
    "description": "Test profile using the simulator adapter for development",
    "adapter": "simulator",
    "adapterConfig": {
        "updateIntervalMs": 50
    },
    "display": {
        "cluster": {
            "enabled": true,
            "screen": 0,
            "layout": "default"
        },
        "headunit": {
            "enabled": true,
            "screen": 1,
            "layout": "default"
        }
    },
    "units": {
        "temperature": "celsius",
        "pressure": "kpa",
        "speed": "kmh"
    },
    "warnings": {
        "coolantTemperature": {
            "warning": 95,
            "critical": 105
        },
        "oilPressure": {
            "warning": 150,
            "critical": 100
        },
        "batteryVoltage": {
            "warning": 12.5,
            "critical": 12.0
        }
    }
}
